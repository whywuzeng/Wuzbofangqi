<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_live_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/image_live_partition_middle"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.wuz.bofangqi.wuzbofangqi.wuzeng.widget.CircleImageView
                    android:id="@+id/circle_image"
                    android:layout_width="47dp"
                    android:layout_gravity="start|top"
                    android:layout_height="47dp"
                    app:border_color="@android:color/white"
                    app:border_width="1dp"
                    android:src="@mipmap/ico_user_default"
                    />

                <TextView
                    android:id="@+id/tv_partition_context"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_live_user_name"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/theme_color_primary"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_live_count"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/ic_watching"
                    android:padding="3dp"
                    android:drawablePadding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>