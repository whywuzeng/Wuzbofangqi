<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/gray_light"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/bili_default_image_tv"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="88dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="模拟数据模拟数据模拟数据模拟数据模拟数据模拟数据模拟数据模拟数据"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_above="@+id/ll_bottom_layout"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ll_bottom_layout"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_paly"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                android:drawablePadding="6dp"
                android:text="0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_talk"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                android:drawablePadding="6dp"
                android:text="0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>