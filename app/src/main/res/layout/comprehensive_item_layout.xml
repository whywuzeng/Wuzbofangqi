<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="3dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/gray_light"
    app:cardElevation="3dp"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:clickable="true"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/img_over_bigpic"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_big"
            android:textColor="@android:color/black"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@id/tv_title_big"
            android:textColor="@color/font_normal"
            android:text="wuzeng"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/icon_up"
            android:drawablePadding="10dp"
            android:layout_above="@+id/ll_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_bottom_layout"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_palynum"
                    android:textColor="@color/font_normal"
                    android:text="wuzeng"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_play_circle_outline_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_comment_subtitle"
                    android:textColor="@color/font_normal"
                    android:text="wuzeng"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_subtitles_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

    </RelativeLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>